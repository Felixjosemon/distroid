<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="club.findups.filedirectory.DataBaseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Dfile_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Directory ID"/>

            <EditText
                android:id="@+id/Dfile_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Directory Name"/>

            <EditText
                android:id="@+id/Dfile_space"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Directory Space"
                android:inputType="numberDecimal"/>
            <EditText
                android:id="@+id/file_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="File ID"/>

            <EditText
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="File Name"/>

            <EditText
                android:id="@+id/file_space"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="File Space"
                android:inputType="numberDecimal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/insert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Insert"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/get_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Show All"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Delete"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
